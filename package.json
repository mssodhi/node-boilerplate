{
  "name": "NodeExpress",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "helmet": "^3.22.0",
    "morgan": "^1.10.0",
    "mysql2": "^2.1.0",
    "sequelize": "^5.21.7"
  },
  "devDependencies": {
    "nodemon": "^2.0.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.7",
    "prettier": "^2.0.5",
    "snyk": "^1.1024.0"
  },
  "lint-staged": {
    "src/**/*.{js,json}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "scripts": {
    "start": "nodemon src/app.js",
    "local": "NODE_ENV=local nodemon src/app.js --trace-sync-io",
    "test": "snyk test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
